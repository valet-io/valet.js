@import 'overlay'
@import 'position'
@import 'button'

#valet-io-loading-overlay
	font-family "Century Gothic", CenturyGothic, AppleGothic, sans-serif
	overlay()

#valet-io-loading-wrapper
	position relative
	font-size 14px
	width 100%
	height 100%
	
#valet-io-loading-content
	absolute-center()
	width 75%
	height 50%

#valet-io-loading-inner
	position relative
	width 100%
	height 100%

#valet-io-loading-spinner
	margin-top 100px
	height 120px

	.spinner
		margin 2em auto

#valet-io-loading-close
	display block
	margin .25em auto